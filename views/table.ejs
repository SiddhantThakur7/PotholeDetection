<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/table.css" />
    <title>Potholes Summarization</title>
  </head>
  <body>
    <div class="container">
      <h2>Detected Potholes <small>Using the Webapp</small></h2>
      <ul class="responsive-table">
        <li class="table-header">
          <div class="col col-1">Id</div>
          <div class="col col-2">Contributor's Name</div>
          <div class="col col-3">Contributor's email</div>
          <div class="col col-4">longitude</div>
          <div class="col col-5">latitude</div>
        </li>
        <% let i = 1 %>
        <% items.forEach(item => { %>
        <li class="table-row">
          <div class="col col-1" data-label="Id"><%= i %></div>
          <div class="col col-2" data-label="Contributor's Name"><%= item.name %></div>
          <div class="col col-3" data-label="Contributor's email"><%= item.email %></div>
          <div class="col col-4" data-label="longitude"><%= item.pothole.longitude %></div>
          <div class="col col-5" data-label="latitude"><%= item.pothole.latitude %> </div>
        </li>
        <% i++; %> 
        <% }) %>
      </ul>
    </div>
  </body>
</html>
